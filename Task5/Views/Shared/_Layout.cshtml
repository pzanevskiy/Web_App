<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sale manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("SaleManager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand mb-1" })
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li>
                    @Html.ActionLink("Домашняя страница", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Информация", "About", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Связаться", "Contact", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                    </li>
                }
            </ul>
            <div class="row">
                <div class="col-auto">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <div class="container my-3">
        @RenderBody()
    </div>

    <footer class="bg-light text-lg-center text-center">
        <div class="text-center p-1">
            <p class="text-dark">&copy; @DateTime.Now.Year - Sale Manager</p>
        </div>
    </footer>

</body>
</html>
